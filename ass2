#include <stdio.h>
main()
{
    int n,i,sumodd=0,sumeven=0,diff;
    scanf("%d",&n);
    i=1;
    while(i<=n)
    {
        if(i%2==0)
            sumeven=sumeven+i;
        if(i%2!=0)
        {
                sumodd=sumodd+i;}
        i++;
    }
    printf("evensum:%d\noddsum:%d",sumeven,sumodd);
    diff=sumodd-sumeven;
    printf("\nthe difference of the both is %d",diff);
}
